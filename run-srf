#!/usr/bin/env python3
"""Wrapper script to run CLI tools from the project root.

Usage:
    ./run-srf run config.yaml
    ./run-srf list --attacks
    ./run-srf test --unit
"""

import subprocess
import sys
from pathlib import Path


def main():
    """Run the CLI tool with the given arguments."""
    # Get the script directory
    script_dir = Path(__file__).parent / "scripts"

    # Check if the script exists
    srf_script = script_dir / "srf"
    if not srf_script.exists():
        print(f"‚ùå CLI script not found at {srf_script}")
        print("Make sure you're running this from the project root directory.")
        sys.exit(1)

    # Run the CLI script with all arguments
    try:
        result = subprocess.run([sys.executable, str(srf_script)] + sys.argv[1:], check=True)
        sys.exit(result.returncode)
    except subprocess.CalledProcessError as e:
        sys.exit(e.returncode)
    except KeyboardInterrupt:
        sys.exit(1)


if __name__ == "__main__":
    main()
